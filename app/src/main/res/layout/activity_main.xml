<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0E6D2"> <!-- Parchment-like background color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- University or Title Header (Change as needed) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Software Engineering"
            android:textSize="24sp"
            android:textColor="#8B0000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Separator line -->
        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:background="#8B0000"
            android:layout_marginBottom="24dp"/>

        <!-- Name and Student ID -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="Ayanle Aideed\n1185242"
            android:textSize="32sp"
            android:textColor="#1C1C1C"
            android:textStyle="bold"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Button to start activity explicitly -->
        <Button
            android:id="@+id/buttonExplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Activity Explicitly"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#8B0000"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="8dp"/>

        <!-- Button to start activity implicitly -->
        <Button
            android:id="@+id/buttonImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Activity Implicitly"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#8B0000"
            android:padding="16dp"
            android:elevation="8dp" />

        <!-- New feature button for "View Image Activity" -->
        <Button
            android:id="@+id/button_view_image_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Image Activity"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15sp"
            android:textSize="18sp"
            android:background="#8B0000"
            android:padding="16dp"
            android:elevation="8dp" />


        <!-- Separator line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8B0000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Motto or Closing Statement -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created for Software Engineering Assignment"
            android:textSize="20sp"
            android:textColor="#8B0000"
            android:textStyle="italic"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
